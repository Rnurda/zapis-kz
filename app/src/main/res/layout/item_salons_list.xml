<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp"
    android:layout_height="wrap_content"
    android:id="@+id/item_salon_cv"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@drawable/rounded_borders"
    android:layout_margin="15dp">
    <ImageView
        android:id="@+id/salon_image"
        android:layout_width="230dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/image_place_holder"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/cashback_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Кэшбек 0%"
        app:layout_constraintBottom_toBottomOf="@id/salon_image"
        app:layout_constraintEnd_toEndOf="@id/salon_image"
        android:layout_margin="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/white"
        android:background="@drawable/yellow_bg"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/salon_image"
        android:text="Salon krasoty"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/salon_title"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Salon Name"
            android:textSize="17sp"
            android:maxLength="20"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/type_text"
            app:layout_constraintTop_toBottomOf="@id/type_text"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/salon_street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Street"
            android:textSize="15sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/type_text"
            app:layout_constraintTop_toBottomOf="@id/salon_title"
            android:layout_marginBottom="10dp"
            android:maxLength="20"/>
    <View
        android:id="@+id/detatils_hr_1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#807E7E"
        app:layout_constraintTop_toBottomOf="@id/salon_street"
        android:layout_marginTop="7dp" />
    <TextView
        android:id="@+id/check_rating_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/detatils_hr_1"
        app:layout_constraintTop_toBottomOf="@id/detatils_hr_1"
        android:layout_margin="10dp"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/rating_people_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/back_person_ic"
        app:layout_constraintStart_toEndOf="@id/check_rating_count"
        app:layout_constraintTop_toTopOf="@id/check_rating_count"
        app:layout_constraintBottom_toBottomOf="@id/check_rating_count"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/rating_start_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/one_start"
        app:layout_constraintTop_toTopOf="@id/check_rating_count"
        app:layout_constraintBottom_toBottomOf="@id/check_rating_count"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/rating_start_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="5.0"
        android:textColor="@color/gold"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/check_rating_count"
        app:layout_constraintBottom_toBottomOf="@id/check_rating_count"
        app:layout_constraintEnd_toStartOf="@id/rating_start_image"
        android:layout_marginEnd="5dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>