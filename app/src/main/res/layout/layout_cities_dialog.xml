<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_cities_container"
    android:layout_width="wrap_content"
    android:layout_height="500dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/white_backgroung">
    <TextView
        android:id="@+id/dialog_choose_city_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите город"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ListView
        android:id="@+id/dialog_cities_list_id"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/dialog_choose_city_tv"
        app:layout_constraintBottom_toTopOf="@id/dialog_cencel_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/grey"
        />
    <TextView
        android:id="@+id/dialog_cencel_btn"
        android:layout_width="match_parent"
        android:text="отмена"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>